<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ychs.lawfirmsys.mapper.MenuMapper">
    <select id="getMenusByRoleId" parameterType="int" resultType="menu">
        select m.*
        from menu m left join privilege p on m.id=p.menuId
        where p.roleId=#{roleId} and m.type!='B';
    </select>
</mapper>